{
    "compilerOptions": {
        "target": "ES2016",
        "module": "commonjs",
        "lib": ["ESNext", "ES2017.Object"],
        "outDir": "./lib",
        "rootDir": "./src",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}
